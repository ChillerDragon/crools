#!/bin/bash

set -eu

CM_BIN_PATH="$HOME/.config/crools/crackman/bin"
CM_SRC_PATH="$HOME/.config/crools/crackman/src"

mkdir -p "$CM_BIN_PATH"
mkdir -p "$CM_SRC_PATH"

if [ "${1:-}" == "description" ]
then
	echo "Vim-fork focused on extensibility and usability"
elif [ "${1:-}" == "delete" ]
then
	cd "$CM_SRC_PATH"/luarocks
	sudo make uninstall
	cd ..
	rm -rf "$CM_SRC_PATH"/luarocks
elif [ "${1:-}" == "is_installed?" ]
then
	if [ -d "$CM_SRC_PATH"/luarocks ]
	then
		echo "yes"
		exit 1
	else
		echo "no"
		exit 0
	fi
else
	distro="$(grep "^ID=" /etc/os-release | cut -d'=' -f2)"
	if [ "$distro" != "debian" ]
	then
		echo "Error: neovim is only supported on debian"
		exit 1
	fi
	if [ ! -x "$(command -v fzf)" ]
	then
		sudo apt-get install -y fzf || exit 1
	fi
	if [ ! -x "$(command -v libtool)" ]
	then
		sudo apt-get install -y libtool-bin || exit 1
	fi

	cd "$CM_SRC_PATH" || exit 1
	if [ ! -d "luarocks" ]
	then
		git clone git@github.com:luarocks/luarocks.git
	fi
	cd luarocks
	tag="$( (git tag && printf 'main\n') | fzf)"
	if [ "$tag" == "" ]
	then
		echo "Error: invalid tag"
		exit 1
	fi
	git pull
	git checkout "$tag" || exit 1
	git pull

	./configure --with-lua-include=/usr/local/include
	make
	sudo make install
fi

