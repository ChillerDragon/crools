#!/usr/bin/env ruby

def require_or_die(gem)
  begin
    require gem
  rescue LoadError
    puts "gem install #{gem}"
    exit 1
  end
end

require_or_die 'colorize'
require_or_die 'nokogiri'
require 'open-uri'

class Stock
  attr_reader :ticker, :chg

  def initialize(attr = {})
    @ticker = attr[:ticker]
    @chg = attr[:chg]
  end
end

def print_volatiles(num = 20)
  url = 'https://www.tradingview.com/markets/stocks-usa/market-movers-most-volatile/'
  cache = "/tmp/stox_#{Time.new.strftime("%F-%H-%M")}.html"
  if File.file? cache
    html = File.open(cache).read
  else
    html = URI.open(url).read
    File.open(cache, 'w') do |file|
      file.write(html)
    end
  end
  doc = Nokogiri::HTML(html)

  stocks = []

  doc.search('tr').each do |row|
    cols = row.search('td')
    next unless cols.length > 2

    stocks << Stock.new(ticker: cols[0].text.strip, chg: cols[2].text.strip)
  end

  stocks.sort_by! do |stock|
    chg = stock.chg.match(/\d+\.\d+/)
    chg.nil? ? 0 : -chg[0].to_f
  end

  print `clear`
  stocks.first(num).each_with_index do |stock, index|
    print "#{index} - "
    if stock.chg[0] == 'âˆ’'
      print stock.chg.red
    else
      print stock.chg.green
    end
    puts " #{stock.ticker}"
  end
end

loop do
  print_volatiles(20)
  sleep 10 * 60
end

